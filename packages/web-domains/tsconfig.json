{
  "extends": "@sambad/typescript-config/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@sds/*": ["../core/sds/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "../../../@types"],
  "exclude": ["node_modules", "dist"]
}
